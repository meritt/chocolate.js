{
  "image-hover": "<span class=\"choco-item-hover\" data-pid=\"{{cid}}\"></span>",

  "overlay": "
    <div class=\"choco-overlay\">
      <div class=\"choco-leftside choco-unselect\"></div>
      {{spinner}}
      <div class=\"choco-container choco-unselect\"></div>
      <div class=\"choco-header\"></div>
      <div class=\"choco-rightside choco-unselect\"></div>
      {{thumbnails}}
      <div class=\"choco-close choco-unselect\"></div>
    </div>
  ",

  "spinner": "
    <div class=\"choco-spinner\">
      <img src=\"{{basedir}}/images/loader.png\" alt=\"\">
    </div>
  ",

  "image-title": "<h1>{{title}}</h1>",

  "thumbnails": "
    <div class=\"choco-thumbnails choco-unselect\"></div>
    <div class=\"choco-thumbnails-toggle choco-unselect\"></div>
  ",

  "thumbnails-item": "
    <div class=\"choco-thumbnail{{selected}}\" data-cid=\"{{cid}}\" style=\"background-image:url('{{thumbnail}}')\"{{title}}></div>
  "
}