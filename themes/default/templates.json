{
  "image-hover": "<span class=\"choco-item-hover\" data-sglid=\"{{cid}}\"></span>",

  "overlay": "
    <div class=\"choco-overlay\">
      <div class=\"choco-leftside choco-unselect\"></div>
      {{spinner}}
      <div class=\"choco-container choco-unselect\"></div>
      <div class=\"choco-header\"></div>
      <div class=\"choco-rightside choco-unselect\"></div>
      {{thumbnails}}
      <div class=\"choco-close choco-unselect\"></div>
    </div>
  ",

  "spinner": "
    <div class=\"choco-spinner\">
     <img src=\"{{basedir}}/images/spinner-bg.png\" alt=\"\">
     <img src=\"{{basedir}}/images/spinner-serenity.png\" alt=\"\">
    </div>
  ",

  "image-title": "<h1>{{title}}</h1><p class=\"choco-counter\">1 Ğ¸Ğ· 3</p>",

  "thumbnails": "<div class=\"choco-thumbnails choco-unselect\"></div><div class=\"choco-thumbnails-toggle choco-unselect\"></div>",

  "thumbnails-item": "<div class=\"choco-thumbnail{{selected}}\" data-cid=\"{{cid}}\" style=\"background-image:url('{{thumbnail}}')\"{{title}}></div>"
}